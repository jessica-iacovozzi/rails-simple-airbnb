<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
        <p>All <%= @flats.count %> flats.</p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="flat-card">
        <% @flats.each do |flat| %>
          <div class="flat-card-image" style="background-image: url('https://api.lorem.space/image/house?w=300&h=300')"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %> </h4>
            </div>
            <p><%= flat.address %></p>
            <div class="flex">
              <div class="flex align-items-center">
                <i class="fa-solid fa-people-line"></i>
                <span><%= flat.number_of_guests %></span>
              </div>
              <div class="flex align-items-center ms-3">
                <i class="fa-solid fa-euro-sign"></i>
                <span><%= flat.price_per_night %></span>
              </div>
              <div class="flex align-items-center ms-3">
                <i class="fa-solid fa-star"></i>
                <span><%= flat.rating %></span>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to 'More info', flat_path(flat) %>
            <%= link_to 'Edit', edit_flat_path(flat) %>
            <%= link_to 'Delete', flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
